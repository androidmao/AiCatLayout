<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CameraMask">
        <!--相机镜头（或扫描框）大小占View宽度的百分比-->
        <attr name="cm_sizeRatio" format="float|reference" />
        <!--相机镜头（或扫描框）形状-->
        <attr name="cm_maskShape">
            <!--正方形-->
            <enum name="square" value="0" />
            <!--圆形-->
            <enum name="circular" value="1" />
        </attr>
        <!--相机镜头遮罩颜色-->
        <attr name="cm_maskColor" format="color|reference" />
        <!--扫描框边的颜色-->
        <attr name="cm_scannerBoxBorderColor" format="dimension" />
        <!--扫描框边的粗细-->
        <attr name="cm_scannerBoxBorderWidth" format="dimension" />
        <!--扫描框四个角的颜色-->
        <attr name="cm_scannerBoxAngleColor" format="dimension" />
        <!--扫描框四个角边的粗细-->
        <attr name="cm_scannerBoxAngleBorderWidth" format="dimension" />
        <!--扫描框四个角边的长度-->
        <attr name="cm_scannerBoxAngleLength" format="dimension" />
        <!--相机镜头（或扫描框）与顶部的间距-->
        <attr name="cm_topMargin" format="dimension" />
        <!--提示文字-->
        <attr name="cm_text" format="string|reference" />
        <!--提示文字颜色-->
        <attr name="cm_textColor" format="color|reference" />
        <!--提示文字字体大小-->
        <attr name="cm_textSize" format="dimension" />
        <!--提示文字是否填充View的宽度。true与View等宽，false与相机镜头（或扫描框）等宽。-->
        <attr name="cm_textSingleLine" format="boolean|reference" />
        <!--提示文字位于相机镜头（或扫描框）上方（或下方）-->
        <attr name="cm_textLocation">
            <!--提示文字位于相机镜头（或扫描框）下方-->
            <enum name="belowCameraLens" value="0" />
            <!--提示文字位于相机镜头（或扫描框）上方-->
            <enum name="aboveCameraLens" value="1" />
        </attr>
        <!--提示文字与相机镜头（或扫描框）的间距-->
        <attr name="cm_textVerticalMargin" format="dimension" />
        <!--提示文字与View（或相机镜头或扫描框）的左间距-->
        <attr name="cm_textLeftMargin" format="dimension" />
        <!--提示文字与View（或相机镜头或扫描框）的右间距-->
        <attr name="cm_textRightMargin" format="dimension" />
    </declare-styleable>

</resources>